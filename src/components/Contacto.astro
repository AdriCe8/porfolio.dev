---
import LinkedInIcon from "./icons/LinkedIn.astro";
import MailIcon from "./icons/Mail.astro";

const CONTACT_METHODS = {
  LINKEDIN: {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/adrian8cuenca/",
    class: "bg-white/5 hover:scale-100 hover:bg-white/10 transition text-white",
    icon: LinkedInIcon,
  },
  EMAIL: {
    name: "Email",
    url: "mailto:adri8cuenca@gmail.com",
    class: "bg-white/5 hover:scale-100 hover:bg-white/10 transition text-white",
    icon: MailIcon,
  }
};

const CONTACT_LINKS = [
  CONTACT_METHODS.LINKEDIN,
  CONTACT_METHODS.EMAIL,
];
---

<div class="flex justify-center items-center gap-8 mt-4">
  {CONTACT_LINKS.map((contact) => (
    <a href={contact.url} target="_blank" rel="noopener" class={`flex items-center gap-x-2 p-4 ${contact.class} text-xl rounded`}>
      <contact.icon class="w-10 h-10 md:w-14 md:h-14" />
      <span>{contact.name}</span>
    </a>
  ))}
</div>
